{
  "name": "orders-inventory-mini-service",
  "version": "1.0.0",
  "description": "Node.js Orders & Inventory Mini-Service (Express, PostgreSQL/Sequelize, Redis cache, express-validator, winston)",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "migrate": "sequelize db:migrate",
    "migrate:undo": "sequelize db:migrate:undo:all",
    "seed": "sequelize db:seed:all",
    "lint": "eslint ."
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.0.1",
    "ioredis": "^5.4.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3",
    "wait-port": "^1.1.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "eslint": "^9.9.0",
    "nodemon": "^3.1.4",
    "sequelize-cli": "^6.6.2"
  }
}
